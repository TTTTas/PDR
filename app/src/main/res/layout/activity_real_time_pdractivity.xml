<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Part 1: 地图容器 -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/part2Container"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_test">

        </ImageView>
        <!-- 这里添加地图控件或者你需要的地图内容 -->

    </FrameLayout>

    <!-- Part 2 和 Part 3 的容器 -->
    <RelativeLayout
        android:id="@+id/part2Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <!-- 灰色bar -->
        <View
            android:id="@+id/grayBar"
            android:layout_width="120dp"
            android:layout_height="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:transformPivotY="-20dp"
            android:background="@android:color/darker_gray" />

        <!-- Part 2: 工具栏 -->
        <RelativeLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 四个圆形按钮 -->
            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="@string/Realtime_bt1"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_button1" />

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="@string/Realtime_bt2"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_button2" />

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="@string/Realtime_bt3"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_button3" />

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="@string/Realtime_bt4"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_button4" />

            </LinearLayout>

            <!-- 文本框 -->
            <TextView
                android:id="@+id/textField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/buttonsContainer"
                android:layout_marginTop="8dp"
                android:hint="请输入内容"
                android:padding="8dp" />

            <!-- Part 3: 实时数据文本框 -->
            <TextView
                android:id="@+id/part3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/textField"
                android:gravity="center"
                android:text="实时数据"
                android:textSize="18sp"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
